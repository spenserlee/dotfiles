[colors]
#background      = ${xrdb:color0:#222}
#background-alt  = ${xrdb:color8:#222}
#foreground      = ${xrdb:color7:#222}
#foreground-alt  = ${xrdb:color15:#222}

nord0   = #2E3440
nord1   = #3B4252
nord2   = #434C5E
nord3   = #4C566A
nord4   = #D8DEE9
nord5   = #E5E9F0
nord6   = #ECEFF4
nord7   = #8FBCBB
nord8   = #88C0D0
nord9   = #81A1C1
nord10  = #5E81AC
nord11  = #BF616A
nord12  = #D08770
nord13  = #EBCB8B
nord14  = #A3BE8C
nord15  = #B48EAD

background      = ${self.nord0}
background-alt  = ${self.nord1}
foreground      = ${self.nord6}
foreground-alt  = ${self.nord4}

primary     = ${self.nord10}
secondary   = ${self.nord8}
alert       = ${self.nord11}

[bar/top]
monitor = ${env:MONITOR:DP-1}
width   = 100%
height  = 34

fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${colors.primary}
line-size  = 4

border-size = 0
border-color = ${colors.secondary}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = NotoSans-Regular:size=10;-1
font-1 = MaterialIcons:size=10;0
font-2 = SF Mono:size=8:antialias=false;-2
font-3 = FontAwesome:size=10;0

modules-left = i3
modules-center = 
modules-right = eth memory cpu temperature date powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; 0 - unused
; 1 - firefox
; 
ws-icon-default = Ôâ¨
ws-icon-0 = 0;0

ws-icon-1 = 1;Ôâ©
ws-icon-2 = 2;ÔÑ†
ws-icon-3 = 3;ÔÑ†

ws-icon-4 = 4;ÔÑ°
ws-icon-5 = 5;ÔÑ°
ws-icon-6 = 6;ÔÑ†

label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 6

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${colors.nord3}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-underline = ${colors.foreground}
label-urgent-padding = ${self.label-focused-padding}

; Separator in between workspaces
; label-separator = |

[module/memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.nord11}
label = RAM: %percentage_used%%
label-padding = 4

[module/cpu]
type = internal/cpu
interval = 2
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.nord15}
label = CPU: %percentage:2%%
label-padding = 4

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.nord9}
format-warn = <ramp> <label-warn>
format-warn-underline = #d02838

label-padding = 4
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.foreground}

ramp-0 = ÓÉâ
ramp-1 = ÓÉä
ramp-2 = ÓÉã
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = ÓÑå
label-open-foreground = ${colors.secondary}
label-close = ÓÅ• cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-underline = ${colors.primary}
;format-connected-prefix = "ÓÜú "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
label-connected-padding = 4

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.nord2}
label-disconnected = %ifname% d/c
label-disconnected-padding = ${self.label-connected-padding}

[module/date]
type = internal/date
;format-prefix = "Ó§§   "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.nord14}

label = %{F#99}%date%%{F-}   %{F#fff}%time%%{F-}
label-padding = 4

date = %m/%d/%Y
date-alt = %A, %B %d, %Y
time = %I:%M %p
time-alt = ${self.time}

